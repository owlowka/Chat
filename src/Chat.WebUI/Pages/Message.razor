@inherits MessageBase

<div class="message" align="@(IsSentByCurrentUser ? "right" : "left")">
    <FluentCard Height="100px"
                Width="300px"
                Class="@($"message {_messageClass}")">
        <div class="content">
            <p>@Model.Content</p>
        </div>
        <div class="info">
            <p class="sender">@Model.Sender.Username</p>
            <p class="createdAt">@Model.CreatedAt</p>
        </div>
    </FluentCard>
    <p>STATUS</p>
</div>
