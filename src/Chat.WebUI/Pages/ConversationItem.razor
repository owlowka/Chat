@inherits ConversationItemBase

<h3>ConversationItem</h3>
<div class="conversationItem">
    <FluentCard Height="auto"
                Width="300px">
        <div class="icon">
            <FluentPersona Name="@Model.Name"
                           Status="PresenceStatus.Available"
                           StatusSize="PresenceBadgeSize.Small"
                           StatusTitle="He is available"
                           Image=@($"/Users/{Model.Name}.png")
                           ImageSize="30px">
            </FluentPersona>
        </div>
        <div class="lastMessage">
@*             //take last message from message list with sender and date or time *@
            <p>@(Model.Messages.LastOrDefault() ?? "no messages")</p>
        </div>
    </FluentCard>
</div>

